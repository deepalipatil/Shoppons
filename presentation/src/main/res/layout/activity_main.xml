<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shopons.view.activity.MainActivity"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:minHeight="?attr/actionBarSize"
        android:background="#2196F3">

        <Button
            android:id="@+id/btn_location"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:background="#2196F3"
            android:text="@string/default_loc"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
            android:textColor="#ffffff"
            android:drawablePadding="0dp"/>


        <ImageButton
            android:layout_height="?attr/actionBarSize"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_alignParentRight="true"
            android:background="#2196F3"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            />

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/activity_floating_button"/>

    <TextView android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="Helllllloooo"/>


    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
            android:id="@+id/drawer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
        />
        </RelativeLayout>

        </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
</LinearLayout>
